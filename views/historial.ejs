<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Dispositivos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f0f3f4;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        nav {
            background-color: #f6f6f6;
        }
        nav a.nav-link {
            color: #001f3f;
            font-weight: bold; /* Negritas */
            text-transform: uppercase; /* Mayúsculas */
        }
        .navbar-brand img {
            width: 50px;
        }
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }
        .nav-left, .nav-right {
            flex: 1;
            display: flex;
            justify-content: center;
        }
        .container {
            padding: 20px;
        }
        .filter-box {
            border: 3px solid #001f3f;
            padding: 20px;
            background-color: #f0f3f4;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        .filter-box h3 {
            font-weight: bold;
            color: #001f3f;
        }
        .table {
            margin-top: 20px;
            border: 2px solid #001f3f;
        }
        .table th, .table td {
            border: 2px solid #001f3f;
            font-weight: normal;
        }
        .table thead {
            background-color: #001f3f;
            color: #ffffff;
        }
        .custom-title {
            font-size: 32px;
            font-weight: bold;
            color: #001f3f;
            margin-bottom: 20px;
        }
        .price-format {
            font-weight: normal;
            color: #001f3f;
        }
        .filter-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
        }
        .filter-grid-wide {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }
        .button-group {
            display: flex;
            justify-content: center;
            gap: 15px;
        }
        .btn-primary {
            background-color: #001f3f; 
            border-color: #001f3f;
        }
        /* Estilo responsivo para dispositivos móviles */
        @media (max-width: 768px) {
            .filter-grid, .filter-grid-wide {
                grid-template-columns: 1fr; 
            }
            .navbar {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="nav-left">
            <a class="nav-link" href="/historial">HISTORIAL</a>
        </div>
        <div class="navbar-brand">
            <img src="https://toppng.com/uploads/preview/phone-icon-blue-mobile-icon-11553392717a4g7h3wf6a.png" alt="Logo">
        </div>
        <div class="nav-right">
            <a class="nav-link" href="/">INVENTARIO</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Filtros -->
        <div class="filter-box">
            <h3>FILTROS:</h3>
            <div class="filter-grid-wide">
                <div>
                    <label for="filterFechaInicio" class="form-label">Desde:</label>
                    <input type="date" id="filterFechaInicio" class="form-control">
                </div>
                <div>
                    <label for="filterFechaFin" class="form-label">Hasta:</label>
                    <input type="date" id="filterFechaFin" class="form-control">
                </div>
            </div>
            <div class="filter-grid">
                <div>
                    <label for="filterMarca" class="form-label">Marca:</label>
                    <input type="text" id="filterMarca" class="form-control" placeholder="Buscar por marca...">
                </div>
                <div>
                    <label for="filterPrecio" class="form-label">Precio:</label>
                    <input type="number" id="filterPrecio" class="form-control" placeholder="Buscar por precio...">
                </div>
                <div>
                    <label for="filterEstado" class="form-label">Estado:</label>
                    <select id="filterEstado" class="form-control">
                        <option value="">Todos</option>
                        <option value="disponible">Disponible</option>
                        <option value="vendido">Vendido</option>
                    </select>
                </div>
            </div>
            <div class="button-group mt-3">
                <button class="btn btn-primary" id="applyFilters">Aplicar filtros</button>
                <button class="btn btn-secondary" id="clearFilters">Limpiar filtros</button>
            </div>
        </div>

        <!-- Tabla Historial -->
        <h2 class="custom-title">HISTORIAL</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Fecha de ingreso</th>
                    <th>Fecha de venta</th>
                </tr>
            </thead>
            <tbody id="dispositivosTable">
                <% dispositivos.forEach(dispositivo => { %>
                <tr>
                    <td><%= dispositivo.nombre %></td>
                    <td><%= dispositivo.marca %></td>
                    <td class="price-format"><%= dispositivo.costo_venta ? '$' + parseFloat(dispositivo.costo_venta).toFixed(2) : 'sin precio' %></td>
                    <td><%= dispositivo.estado %></td>
                    <td>
                        <% if (dispositivo.fecha_ingreso && dispositivo.fecha_ingreso.toDate) { %>
                            <%= dispositivo.fecha_ingreso.toDate().toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: '2-digit' }) %>
                        <% } else { %>
                            sin fecha
                        <% } %>
                    </td>
                    <td>
                        <% if (dispositivo.fecha_venta && dispositivo.fecha_venta.toDate) { %>
                            <%= dispositivo.fecha_venta.toDate().toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: '2-digit' }) %>
                        <% } else { %>
                            no vendido
                        <% } %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Filtros -->
    <script>
    document.getElementById('applyFilters').addEventListener('click', function() {
        const fechaInicio = document.getElementById('filterFechaInicio').value;
        const fechaFin = document.getElementById('filterFechaFin').value || new Date().toISOString().split('T')[0];
        const marca = document.getElementById('filterMarca').value.toLowerCase();
        const precio = document.getElementById('filterPrecio').value;
        const estado = document.getElementById('filterEstado').value;

        const rows = document.querySelectorAll('#dispositivosTable tr');
        let resultsFound = false;

        rows.forEach(row => {
            const dispositivoMarca = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
            const dispositivoPrecio = row.querySelector('td:nth-child(3)').textContent;
            const dispositivoEstado = row.querySelector('td:nth-child(4)').textContent;
            const dispositivoFechaIngresoTexto = row.querySelector('td:nth-child(5)').textContent;

            let dispositivoFechaIngreso = null;

            if (dispositivoFechaIngresoTexto && dispositivoFechaIngresoTexto !== 'sin fecha') {
                dispositivoFechaIngreso = convertirFechaTextoADate(dispositivoFechaIngresoTexto);
            }

            let matches = true;

            // Filtrar por marca
            if (marca && !dispositivoMarca.includes(marca)) {
                matches = false;
            }
            // Filtrar por precio
            if (precio && parseFloat(dispositivoPrecio) !== parseFloat(precio)) {
                matches = false;
            }
            // Filtrar por estado
            if (estado && dispositivoEstado !== estado) {
                matches = false;
            }
            // Filtrar por rango de fechas de ingreso
            if (fechaInicio && dispositivoFechaIngreso) {
                const fechaInicioISO = new Date(fechaInicio).toISOString().split('T')[0];
                const fechaFinISO = new Date(fechaFin).toISOString().split('T')[0];
                const fechaDispositivoISO = dispositivoFechaIngreso.toISOString().split('T')[0];

                if (fechaDispositivoISO < fechaInicioISO || fechaDispositivoISO > fechaFinISO) {
                    matches = false;
                }
            }

            if (matches) {
                row.style.display = '';
                resultsFound = true; // Se encontró al menos un resultado
            } else {
                row.style.display = 'none';
            }
        });

        // Mostrar alerta si no se encontraron resultados
        if (!resultsFound) {
            Swal.fire({
                icon: 'warning',
                title: 'No se han encontrado resultados',
                text: 'Prueba con otros filtros',
            });
        }
    });

    document.getElementById('clearFilters').addEventListener('click', function() {
        document.getElementById('filterFechaInicio').value = '';
        document.getElementById('filterFechaFin').value = '';
        document.getElementById('filterMarca').value = '';
        document.getElementById('filterPrecio').value = '';
        document.getElementById('filterEstado').value = '';

        const rows = document.querySelectorAll('#dispositivosTable tr');
        rows.forEach(row => {
            row.style.display = '';
        });
    });

    function convertirFechaTextoADate(fechaTexto) {
        const partesFecha = fechaTexto.split('/');
        if (partesFecha.length === 3) {
            const dia = partesFecha[0];
            const mes = partesFecha[1] - 1;
            const año = '20' + partesFecha[2]; 
            return new Date(año, mes, dia);
        }
        return null;
    }
    </script>
</body>
</html>
